
@{
    ViewBag.Title = "DuoAuthentication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
<title>Duo 2FA</title>
<meta name='viewport' content='width=device-width, initial-scale=1'>
<meta http-equiv='X-UA-Compatible' content='IE=edge'>
<link rel='stylesheet' type='text/css' href='~/Content/Duo-Frame.css'>
</head>
<body>
    <h2>Duo Authentication</h2>

    <iframe id='duo_iframe'
            title='Two-Factor Authentication'
            frameborder='0'>
    </iframe>
    <script src='~/Scripts/Duo_Authentication/Duo-Web-v2.js'></script>
    <script>
        Duo.init({
            'host': '@System.Configuration.ConfigurationManager.AppSettings["DUOHOST"]',
            'sig_request': '@Session["SignRequest"]',
            'post_action': '/Home/DuoAuthenticationVerify'
        });
    </script>
</body>


